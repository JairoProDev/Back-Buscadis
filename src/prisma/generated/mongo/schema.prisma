// prisma/schema.mongo.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/generated/mongo" // Ruta correcta
}

datasource mongodb {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Adiso {
  id          String      @id @default(auto()) @map("_id") @mongodb.ObjectId
  titulo      String
  descripcion String
  categoriaId String
  precio      Float?
  moneda      String?
  contacto    String
  latitud     Float?
  longitud    Float?
  estado      EstadoAdiso
  expiracion  DateTime? // Completa el tipo de dato
  creadoEn    DateTime    @default(now())
  usuarioId   String

  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  categoria   Categoria    @relation(fields: [categoriaId], references: [id])
  comentarios Comentario[]
  imagenes    Imagen[]
  extra       Json?
}

model Imagen {
  id      String @id @default(auto()) @map("_id") @mongodb.ObjectId
  url     String
  adisoId String @mongodb.ObjectId
  adiso   Adiso  @relation(fields: [adisoId], references: [id])
}

model Comentario {
  id           String   @id @default(auto()) @map("_id") @mongodb.ObjectId
  contenido    String
  calificacion Int?
  creadoEn     DateTime @default(now())
  usuarioId    String
  adisoId      String   @mongodb.ObjectId
  adiso        Adiso    @relation(fields: [adisoId], references: [id])
}

model Usuario {
  id     String  @id @default(auto()) @map("_id") @mongodb.ObjectId
  nombre String
  ads    Adiso[]
}

model Categoria {
  id     String  @id @default(auto()) @map("_id") @mongodb.ObjectId
  nombre String
  ads    Adiso[]
}

enum EstadoAdiso {
  ACTIVO
  INACTIVO
  VENDIDO
  EXPIRADO
}
