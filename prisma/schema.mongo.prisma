generator client {
  provider = "prisma-client-js"
  output   = "./generated/mongo"
}

datasource mongodb {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Adiso {
  id          String         @id @default(auto()) @map("_id") @mongodb.ObjectId
  titulo      String
  descripcion String
  categoriaId Int
  precio      Float?
  moneda      String? // Ejemplo: "USD", "PEN"
  contacto    String
  latitud     Float?
  longitud    Float?
  estado      EstadoAdiso
  expiracion  DateTime?
  creadoEn    DateTime        @default(now())
  usuarioId   Int
  comentarios Comentario[]
  imagenes    Imagen[]
  extra       Json?           // Para datos adicionales
}

model Imagen {
  id      String  @id @default(auto()) @map("_id") @mongodb.ObjectId
  url     String
  adisoId String  @mongodb.ObjectId
  adiso   Adiso   @relation(fields: [adisoId], references: [id])
}

model Comentario {
  id           String      @id @default(auto()) @map("_id") @mongodb.ObjectId
  contenido    String
  calificacion Int?
  creadoEn     DateTime    @default(now())
  usuarioId    Int
  adisoId      String      @mongodb.ObjectId
  adiso        Adiso       @relation(fields: [adisoId], references: [id])
}

enum EstadoAdiso {
  ACTIVO
  INACTIVO
  VENDIDO
  EXPIRADO
}